        B[Business User]
        N[Professional Notary]
        V[Document Verifier]
        A[System Admin]
    end
    
    subgraph "Document Management"
        D1[Upload Document]
        D2[View Documents]
        D3[Manage Document Access]
        D4[Download Document]
    end

    subgraph "Notarization Services"
        N1[Request Notarization]
        N2[Multi-Signature Request]
